<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>
    <appender name="roll-by-time-and-size" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>vehicle-metrics-processor.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>vehicle-metrics-processor-%d{yyyy-MM-dd-HH-mm}.%i.log.gz
            </fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %p %m%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="org.apache.hadoop" level="warn"/>
    <logger name="org.apache.spark" level="warn"/>
    <logger name="org.spark_project.jetty.server" level="warn"/>
</configuration>
